<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="constraints" author="Aleksandr Semykin">
        
        <addNotNullConstraint tableName="users" columnName="first_name"/>
        <addNotNullConstraint tableName="users" columnName="last_name"/>
        <addNotNullConstraint tableName="users" columnName="sex"/>
        <addNotNullConstraint tableName="users" columnName="nick_name"/>
        <addNotNullConstraint tableName="users" columnName="email"/>
        <addNotNullConstraint tableName="users" columnName="phone_number"/>
        <addNotNullConstraint tableName="users" columnName="deleted" defaultNullValue="false"/>


        <addNotNullConstraint tableName="hard_skills" columnName="name"/>

        <addNotNullConstraint tableName="cities" columnName="name"/>

        <addNotNullConstraint tableName="avatars" columnName="file_name"/>
    </changeSet>
</databaseChangeLog>